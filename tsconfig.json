{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
	"experimentalDecorators": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2019"
    ]
  },
  "include": [
    "**/src/*", "**/utils/*"
  ]
}
