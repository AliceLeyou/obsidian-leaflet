{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "esnext",
        "target": "es6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["dom", "esnext", "scripthost", "es2019"]
    },
    "include": ["**/src/*", "**/modals/*", "**/utils/*", "**/map/*", "**/settings/*"],
}
